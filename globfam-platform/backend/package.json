    "db:seed": "tsx src/db/seed.ts",
    "postinstall": "npx prisma generate || echo 'Prisma generate will run during build phase'"
  },
  "keywords": ["fintech", "api", "family-finance"],
  "author": "GlobFam Team",
  "license": "PROPRIETARY",
  "dependencies": {
    "@prisma/client": "^5.8.0",
    "axios": "^1.6.5",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.8",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "plaid": "^12.0.0",
    "redis": "^4.6.12",
    "socket.io": "^4.6.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
